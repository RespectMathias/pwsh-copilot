{
    "name": "pwsh-copilot",
    "version": "0.0.0",
    "description": "Use GitHub Copilot CLI in PowerShell 5.1 on Windows",
    "bin": {
        "copilot": "node_modules/@github/copilot/index.js"
    },
    "dependencies": {
        "@github/copilot": "latest"
    },
    "license": "MIT",
    "os": [
        "win32"
    ],
    "files": [
        "pwsh.exe"
    ],
    "scripts": {
        "postinstall": "node -e \"if(process.platform==='win32')try{const{copyFileSync:c,mkdirSync:m}=require('fs'),{join:j}=require('path'),p=require('child_process').execSync('npm config get prefix',{encoding:'utf8'}).trim();m(p,{recursive:true});c(j(__dirname,'pwsh.exe'),j(p,'pwsh.exe'));console.log('[pwsh-copilot] Installed')}catch(e){console.error('[pwsh-copilot] Install failed:',e.message);process.exit(1)}\""
    }
}